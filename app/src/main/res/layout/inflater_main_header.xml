<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_head"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_height2"
    android:background="@drawable/shape_bg_primary"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_marginTop="@dimen/status_height"
        android:id="@+id/rl_headerLeft"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="@dimen/margin_10"
            android:id="@+id/iv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:padding="8dp"
            android:src="@mipmap/change_index"
            android:textColor="#ff313131"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/status_height"
        android:id="@+id/headerTitle"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2.0"
        android:gravity="center"
        android:singleLine="true"
        android:text="蜂投理财"
        android:textColor="#00000000"
        android:textSize="@dimen/text_size_20" />

    <RelativeLayout
        android:layout_marginTop="@dimen/status_height"
        android:id="@+id/rl_headerRight"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:padding="8dp"
            android:src="@mipmap/news_index"
            android:textColor="#ff313131"
            android:textSize="15sp" />

    </RelativeLayout>
</LinearLayout>
