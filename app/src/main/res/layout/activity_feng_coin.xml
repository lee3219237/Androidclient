<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    tools:context="com.ftoul.androidclient.activitys.FengCoinActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@mipmap/bg_main_head"
        android:fitsSystemWindows="true"
        android:paddingTop="@dimen/status_height"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:visibility="invisible"
                android:id="@+id/rl_headerLeft"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_left"
                    android:src="@mipmap/return_icon"
                    android:layout_width="@dimen/margin_10"
                    android:layout_height="@dimen/margin_18"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_18"

                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:singleLine="true"
                android:text="蜂投理财"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

            <RelativeLayout
                android:id="@+id/rl_headerRight"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical">

                <TextView
                    android:paddingTop="@dimen/margin_7"
                    android:text="使用规则"
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <ImageView
                    android:visibility="invisible"
                    android:layout_toLeftOf="@id/tv_right"
                    android:src="@mipmap/ic_headset_mic_black_24dp"
                    android:id="@+id/iv_customer_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    />

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@+id/ll_head"
            >
            <TextView
                android:id="@+id/tv_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_20"
                />
            <TextView
                android:layout_marginTop="@dimen/margin_10"
                android:layout_below="@+id/tv_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用蜂币(枚)"
                android:textSize="@dimen/text_size_14"
                android:textColor="@android:color/white"
                android:gravity="center"
                />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/margin_0.5"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/rl_count"
            android:layout_alignBottom="@+id/rl_count"
            android:layout_centerHorizontal="true"
            ></View>
        <RelativeLayout
            android:id="@+id/rl_count"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@+id/ll_head"
            >
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_20"
                />
            <TextView
                android:layout_marginTop="@dimen/margin_10"
                android:layout_below="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月即将过期(枚)"
                android:textSize="@dimen/text_size_14"
                android:textColor="@android:color/white"
                android:gravity="center"
                />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_18"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收支明细"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black_3a3a3a"
        />
    <com.ftoul.androidclient.ui.MyFramelayout
        android:id="@+id/my_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ftoul.androidclient.ui.recycleloading.XRecyclerView
            android:layout_marginTop="@dimen/margin_0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/xrecycleview"
            android:background="@android:color/white"
            ></com.ftoul.androidclient.ui.recycleloading.XRecyclerView>
    </com.ftoul.androidclient.ui.MyFramelayout>

</LinearLayout>
