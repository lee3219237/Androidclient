<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/shape_bg_primary"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:paddingTop="@dimen/status_height">

    <RelativeLayout
        android:id="@+id/rl_headerLeft"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@mipmap/back_ico" />
    </RelativeLayout>

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2.0"
        android:gravity="center"
        android:singleLine="true"
        android:text="蜂投理财"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rl_headerRight"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_10"
            android:src="@mipmap/ic_headset_mic_black_24dp"
             />

    </RelativeLayout>
</LinearLayout>
