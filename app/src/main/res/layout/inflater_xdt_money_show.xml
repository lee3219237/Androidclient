<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_total_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_28"
        android:text="0.00"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        />
    <TextView
        android:id="@+id/txt_total_original_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_12"
        android:text="总待收本金(元)"
        android:layout_below="@+id/txt_total_original"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        />
    <RelativeLayout
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_total_original_show"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/txt_total_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="@dimen/text_size_20"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_total_income_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总应计收益"
            android:textSize="@dimen/text_size_12"
            android:layout_below="@+id/txt_total_income"
            android:layout_marginLeft="@dimen/margin_40"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/margin_10"
            />
    </RelativeLayout>
    <View
        android:visibility="invisible"
        android:layout_width="@dimen/margin_1"
        android:layout_height="@dimen/margin_40"
        android:background="@android:color/white"
        android:layout_below="@+id/txt_total_original_show"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/rl_right"
        ></View>
    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_total_original_show"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
       >
        <TextView
            android:id="@+id/txt_all_total_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="@dimen/text_size_20"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_all_total_income_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计到账收益"
            android:textSize="@dimen/text_size_12"
            android:layout_below="@+id/txt_all_total_income"
            android:layout_marginLeft="@dimen/margin_40"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/margin_10"
            />
    </RelativeLayout>
</RelativeLayout>
