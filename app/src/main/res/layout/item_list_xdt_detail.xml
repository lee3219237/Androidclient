<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_item"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_3a3a3a"
        android:textSize="@dimen/text_size_15"
        android:text="小贷通3982394"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_15"
        android:drawableLeft="@drawable/shape_red_vertical_line"
        android:drawablePadding="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_15"
        />
        <TextView
            android:id="@+id/txt_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:drawableRight="@mipmap/ic_in"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/txt_name"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/grey_999999"
            android:drawablePadding="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center"
            />
    <View
        android:id="@+id/viewline1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/gray_e4"
        android:layout_below="@+id/txt_name"
        ></View>
        <TextView
            android:id="@+id/txt_had_income_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/text_size_13"
            android:text="已获收益/预期收益"
            android:layout_below="@+id/viewline1"
            android:layout_margin="@dimen/margin_15"
            />
        <TextView
            android:id="@+id/txt_had_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.90/100.90"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/black_3a3a3a"
            android:layout_alignBottom="@+id/txt_had_income_show"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15"
            />
    <View
        android:id="@+id/viewline2"
        android:layout_below="@id/txt_had_income_show"
        style="@style/view_line_marginleft_15dp_e4"></View>
    <TextView
        android:id="@+id/txt_money_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/text_size_13"
        android:text="投资金额"
        android:layout_below="@+id/viewline2"
        android:layout_margin="@dimen/margin_15"
        />
    <TextView
        android:id="@+id/txt_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.90"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/black_3a3a3a"
        android:layout_alignBottom="@+id/txt_money_show"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_15"
        />
    <View
        android:id="@+id/viewline3"
        android:layout_below="@id/txt_money_show"
        style="@style/view_line_marginleft_15dp_e4"></View>
    <TextView
        android:id="@+id/txt_limit_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/text_size_13"
        android:text="预期年化利率/期限"
        android:layout_below="@+id/viewline3"
        android:layout_margin="@dimen/margin_15"
        />
    <TextView
        android:id="@+id/txt_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10%/6个月"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/black_3a3a3a"
        android:layout_alignBottom="@+id/txt_limit_show"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_15"
        />
    <View
        android:id="@+id/viewline5"
        android:layout_below="@id/txt_limit_show"
        style="@style/view_line_marginleft_15dp_e4"></View>
    <TextView
        android:id="@+id/txt_day_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_999999"
        android:textSize="@dimen/text_size_13"
        android:text="起息日"
        android:layout_below="@+id/viewline5"
        android:layout_margin="@dimen/margin_15"
        />
    <TextView
        android:id="@+id/txt_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-04-12"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/black_3a3a3a"
        android:layout_alignBottom="@+id/txt_day_show"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_15"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/gray_e4"
        android:layout_below="@+id/txt_day_show"
        ></View>
</RelativeLayout>
