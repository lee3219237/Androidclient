<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/inflater_header"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/bg_gray"
        />
    <LinearLayout
        android:id="@+id/ll_user_icon"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="头像"
            style="@style/tv_userinfo_14sp" />
        <ImageView
            android:src="@mipmap/toux"
            android:id="@+id/iv_user_icon"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_width="@dimen/img_height_60"
            android:layout_height="@dimen/img_height_60" />
        <ImageView
            android:src="@mipmap/ic_in"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        style="@style/view_line_marginleft_15dp" />
    <LinearLayout
        android:id="@+id/ll_nickname"
        style="@style/ll_userinfo">
        <TextView
            android:text="昵称"
            style="@style/tv_userinfo_16sp" />
        <TextView
            android:textColor="@color/grey_999999"
            android:layout_marginRight="@dimen/margin_15"
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <ImageView
            android:background="@mipmap/ic_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        style="@style/view_line_marginleft_15dp" />
    <LinearLayout
        android:id="@+id/ll_phone_num"
        style="@style/ll_userinfo">
        <TextView
            android:text="注册手机号"
            style="@style/tv_userinfo_14sp" />
        <TextView
            android:layout_marginRight="@dimen/margin_15"
            android:id="@+id/tv_phone_num"
            android:textColor="@color/grey_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:visibility="visible"
            android:background="@mipmap/ic_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        style="@style/view_line_marginleft_15dp" />
    <LinearLayout
        android:id="@+id/ll_address"
        style="@style/ll_userinfo">
        <TextView
            android:text="收货地址"
            style="@style/tv_userinfo_14sp" />
        <TextView
            android:singleLine="true"
            android:maxLength="16"
            android:layout_marginRight="@dimen/margin_15"
            android:id="@+id/tv_address"
            android:textColor="@color/grey_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:background="@mipmap/ic_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/bg_gray"/>
    <LinearLayout
        android:id="@+id/ll_e_account"
        style="@style/ll_userinfo">
        <TextView
            android:text="我的E账户"
            style="@style/tv_userinfo_14sp" />
        <ImageView
            android:background="@mipmap/ic_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        style="@style/view_line_marginleft_15dp" />
    <LinearLayout
        android:id="@+id/ll_safe_manager"
        style="@style/ll_userinfo">
        <TextView
            android:text="密码管理"
            style="@style/tv_userinfo_14sp" />
        <ImageView
            android:background="@mipmap/ic_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"/>
</LinearLayout>
