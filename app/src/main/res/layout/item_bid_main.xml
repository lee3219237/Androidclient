<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="22dp"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    >

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_bid_name"
        style="@style/tv_bold_title"
        android:layout_below="@+id/tv_tips"
        android:layout_marginTop="20dp"
        android:text="######" />

    <TextView
        android:id="@+id/tv_bid_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bid_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="0%"
        android:textColor="@color/colorAccent"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/tv_yu_qi_nian_hua"
        style="@style/tv_grey_12sp"
        android:layout_below="@+id/tv_bid_rate"
        android:layout_marginTop="9dp"
        android:text="预期年化利率" />

    <TextView
        android:id="@+id/tv_least_money"
        style="@style/tv_grey_12sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_yu_qi_nian_hua"
        android:text="0元起投" />
    <View
        android:layout_width="@dimen/margin_0.5"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginBottom="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_alignBottom="@+id/tv_yu_qi_nian_hua"
        android:layout_alignTop="@+id/tv_yu_qi_nian_hua"
        android:background="@color/gray_ddd"
        android:layout_toLeftOf="@+id/tv_least_money"/>
    <TextView
        android:id="@+id/tv_bid_time"
        style="@style/tv_grey_12sp"
        android:layout_alignTop="@+id/tv_yu_qi_nian_hua"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_toLeftOf="@+id/tv_least_money"
        android:text="0个月" />


    <TextView
        android:id="@+id/tv_surplus_money"
        style="@style/tv_main_fragment"
        android:text="剩余20万元"
        android:visibility="gone" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:background="@drawable/shape_btn_red_main"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:text="立即投资"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_above="@+id/tv_bid_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>