<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/inflater_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_grey_12sp"
            android:layout_marginLeft="@dimen/margin_18"
            android:text="短信已发送至"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_phone_num"
            style="@style/tv_15sp_red_f74c4c"
            android:text="18888888888" />

    </LinearLayout>

    <TextView
        style="@style/tv_grey_12sp"
        android:layout_marginLeft="@dimen/margin_18"
        android:layout_marginTop="@dimen/margin_10"
        android:text="如未收到请致电客服 400-966-8889"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20">

        <EditText
            android:id="@+id/et_message_code"
            style="@style/et_main"
            android:hint="请输入短信验证码" />

        <com.ftoul.androidclient.ui.TimeButton
            android:id="@+id/btn_get_code"
            style="@style/time_button"
            android:text="获取验证码" />
    </RelativeLayout>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/et_pwd"
        style="@style/et_main"
        android:layout_marginTop="@dimen/margin_15"
        android:hint="设置登录密码" />

    <Button
        android:enabled="false"
        android:id="@+id/btn_register"
        style="@style/btn_red_grey_rectangle"
        android:layout_marginTop="@dimen/margin_25"
        android:text="注册送理财体验金" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_18"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_grey_12sp"
            android:layout_marginLeft="@dimen/margin_18"
            android:text="完成注册就视为我已同意"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_register_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:text="《蜂投网用户注册协议》"
            android:textColor="@color/goldenrod"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>
