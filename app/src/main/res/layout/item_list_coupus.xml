<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/select_btn_coupus"
    android:id="@+id/framelayout"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="@dimen/margin_15"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_fd7d6a"
            android:textSize="@dimen/text_size_18"
            android:text="￥ 100.0"
            android:layout_centerVertical="true"
            />
        <View
            android:id="@+id/line"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txt_money"
            android:layout_height="@dimen/margin_50"
            android:background="@drawable/vertical_dash_line"
            android:layerType="software"
            android:layout_width="@dimen/margin_30"
            ></View>
        <TextView
            android:id="@+id/txt_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用条件: 投资额满10000元可用"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black_666666"
            android:layout_toRightOf="@+id/line"
            />
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期时间: 2017-03-12"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/black_666666"
            android:layout_toRightOf="@+id/line"
            android:layout_below="@+id/txt_limit"
            android:layout_marginTop="@dimen/margin_10"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_jiaobiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/shiyong_jiaobiao"
        android:layout_gravity="bottom|right"
        />
</FrameLayout>
