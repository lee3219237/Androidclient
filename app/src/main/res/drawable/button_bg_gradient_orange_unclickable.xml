<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/orange_clickable_start" />
    <!-- 设置圆角
    注意：	bottomRightRadius是左下角而不是右下角  bottomLeftRadius右下角-->
    <corners
        android:bottomLeftRadius="1dp"
        android:bottomRightRadius="1dp"
        android:topLeftRadius="1dp"
        android:topRightRadius="1dp" />
    <!-- 设置颜色渐变 -->
    <gradient
        android:angle="90"
        android:endColor="@color/orange_clickable_end"
        android:startColor="@color/orange_clickable_start"
        android:type="linear" />


    <!-- 设置边框-->
    <stroke
        android:width="0px"
        android:color="@color/orange_clickable_start" />
</shape>

